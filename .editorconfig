# top-most EditorConfig file
root = true

# Global settings (for all files)
[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Settings for Java files
[*.java]
indent_style = tab
indent_size = 4
tab_width = 4

# Settings for XML files (pom.xml, Spring configs)
[*.xml]
indent_style = tab
indent_size = 4
tab_width = 4

# Settings for properties files (application.properties, messages.properties)
[*.properties]
indent_style = tab
indent_size = 4
tab_width = 4

# Settings for Markdown files (if you have them)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true